@model Book
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h4 class="text-left">@(Model.Title)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <h3>Book cover</h3>
        </div>
        <div class="col-lg-9">
            <p><strong>Auteur:</strong> @(Model.author.firstName) &nbsp @(Model.author.lastName)></p>
            <p><strong>Date de publication:</strong> @(Model.publicationDate)</p>
            <p><strong>Genre:</strong> @(Model.genre.Name)</p>
        </div>
    </div>
    <div class="btn-group" role="group">
        <a href="/Book/BookaBook/@Model.Id/@(ViewData[studentId])" class="btn btn-primary">Réserver</a>
        <a href="/Book/AddReview/@Model.Id/@(ViewData[studentId])" class="btn btn-primary">
            Ecrire un review</a>
            <a href="/Book/Reviews/@Model.Id" class="btn btn-success">Afficher les reviews</a>
    </div>
</div>
