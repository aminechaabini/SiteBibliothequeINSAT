@model List<Reservation>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Auteur</th>
            <th scope="col">Votre reservation s'annule le '</th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (Reservation r in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@(r.book.Title)</td>
                    <td>@(r.book.author.firstName + r.book.author.lastName)</td>
                    <td>@(r.cancellingDate)</td>
                    i++;
                </tr>
            }
        }
    </tbody>
</table>