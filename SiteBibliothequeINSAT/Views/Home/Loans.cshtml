@model List<Loan>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Auteur</th>
            <th scope="col">Vous devez retourner le livre avant le</th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (Loan l in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@(l.book.Title)</td>
                    <td>@(l.book.author.firstName + " " +l.book.author.lastName)</td>
                    <td>@(l.returnDate)</td>
                    i++;
                </tr>
            }
        }
    </tbody>
</table>